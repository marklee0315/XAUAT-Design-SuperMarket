@{
    Layout = "_AdminLayout";
}
@{
    var shopItems = Model as List<MemberGoodMapping>;
}

<!DOCTYPE html>

<html>

<body>

    <div class="box">

        <div class="box-header">
            <div class="box-name">
                <i class="fa fa-table"></i>
                <span>会员购物信息表</span>
            </div>
            <div class="box-icons">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="expand-link">
                    <i class="fa fa-expand"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
            <div class="no-move"></div>
        </div>

        <div class="box-content">
            <table class="table">
                <thead>
                    <tr>
                        <th>订单ID</th>
                        <th>会员ID</th>
                        <th>货物ID</th>
                        <th>购买数量</th>
                        <th>创建订单时间</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < shopItems.Count; i++)
                    {
                    <tr>
                        <td>@shopItems[i].Id</td>
                        <td>@shopItems[i].MemberId</td>
                        <td>@shopItems[i].GoodId</td>
                        <td>@shopItems[i].Quantity</td>
                        <td>@shopItems[i].CreateTime</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</body>

</html>